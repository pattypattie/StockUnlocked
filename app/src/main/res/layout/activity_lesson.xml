<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayanit.stockunlocked.LessonActivity">

    <ImageButton
        android:id="@+id/lessonback"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/button_style_2"
        app:srcCompat="@drawable/backicon2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        />
    <Button
        android:id="@+id/lesson1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:text="Lesson 1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lessonback"
        />

    <Button
        android:id="@+id/lesson2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:layout_marginTop="10dp"
        android:text="Lesson 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson1"
        />

    <Button
        android:id="@+id/lesson3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:layout_marginTop="10dp"
        android:text="Lesson 3"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson2"
        />

    <Button
        android:id="@+id/lesson4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:layout_marginTop="10dp"
        android:text="Lesson 4"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="319dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson3"
        />

    <Button
        android:id="@+id/lesson5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:layout_marginTop="10dp"
        android:text="Lesson 5"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="379dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson4"
        />

    <Button
        android:id="@+id/lesson6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_style_1"
        android:layout_marginTop="10dp"
        android:text="Lesson 6"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="379dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson5"
        />
</android.support.constraint.ConstraintLayout>

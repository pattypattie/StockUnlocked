<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.npappdev.chayanit.stockunlocked.ExamActivity">

    <ImageButton
        android:id="@+id/examback"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:foreground="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/backicon2"
        android:background="@drawable/button_style_5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/instructionexam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to exam!!!\n\n This exam tests your basic knowledge about stock trading that you have learned from all the lessons in StockUnlocked. The difficulty of the next questions increases if you have answered the previous question correctly, and
decreases if you have answered incorrectly, and this also reflects in your score as well.\n\n There are 10 questions in this exam. \n\nAre you ready? Good luck!"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="212dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/examback" />

    <Button
        android:id="@+id/letsgo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="I understand. Let's go!"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="103dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_style_7"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/instructionexam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/examback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonnone"
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView70"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:text="Button"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
       android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonnone"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="Button"
        android:foreground="?android:attr/selectableItemBackground"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Button"
        android:foreground="?android:attr/selectableItemBackground"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:text="Button"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="349dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView70"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="424dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/correctText"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:text="" />

    <TextView
        android:id="@+id/examExplainText"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correctText"
        android:text=""
        android:visibility="gone"/>

    <Button
        android:id="@+id/nextExam"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/examExplainText"
       />

</android.support.constraint.ConstraintLayout>




</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayanit.stockunlocked.Lesson2Activity">

    <ImageButton
        android:id="@+id/lesson2back"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backicon2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Lesson 2 : Getting Started"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="199dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lesson2back"
        app:layout_constraintTop_toTopOf="@id/lesson2back"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="117dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/circle_25"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="92dp"
        app:layout_constraintTop_toBottomOf="@id/lesson2back"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="117dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/circle_50"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="248dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="117dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/circle_75"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="267dp"
        app:layout_constraintTop_toBottomOf="@id/radiogroupaccount"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="117dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:srcCompat="@drawable/circle_100" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1 : Choosing Broker"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="146dp"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="@id/imageView"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2 : Choosing Account Type"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="350dp"
        app:layout_constraintLeft_toRightOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/imageView2"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3 : Submit Document"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="461dp"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 4 : Wait for Username and Password"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="464dp"
        app:layout_constraintLeft_toRightOf="@id/imageView4"
        app:layout_constraintTop_toTopOf="@id/imageView4"
        app:layout_constraintBottom_toBottomOf="@id/imageView4"/>

    <Button
        android:id="@+id/unlockls3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unlock lesson 3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="287dp" />

    <Button
        android:id="@+id/takequiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take a quiz"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="462dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bankbook1"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="296dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintRight_toLeftOf="@id/imageView8"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bankbook2"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="427dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bankbook3"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="211dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintLeft_toRightOf="@id/imageView8"
        android:layout_marginLeft="10dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radiogroupaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <RadioButton android:id="@+id/account1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton android:id="@+id/account2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/account3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testttttttttt"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="371dp"
        app:layout_constraintTop_toBottomOf="@id/radiogroupaccount"/>



</android.support.constraint.ConstraintLayout>

    </ScrollView>
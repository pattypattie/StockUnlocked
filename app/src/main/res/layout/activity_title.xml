<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayanit.stockunlocked.TitleActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logo_su"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/press"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/press"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/lesson_bt"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/press"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/lessonbt"
        />
    <!--style="@style/Widget.AppCompat.Button.Colored"-->

    <Button
        android:id="@+id/quiz_bt"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/lesson_bt"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/quizbt"
        android:textSize="20dp"
         />
    <!--style="@style/Widget.AppCompat.Button.Colored"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Quiz and Game"-->
    <!--app:layout_constraintTop_toBottomOf="@id/lesson_bt"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->

    <Button
        android:id="@+id/exam_bt"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_bt"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/exambt"

         />
    <!--style="@style/Widget.AppCompat.Button.Colored"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Exam"-->
    <!--app:layout_constraintTop_toBottomOf="@id/quiz_bt"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->

    <Button
        android:id="@+id/setting"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/exam_bt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/settingbt"


        />
    <!--style="@style/Widget.AppCompat.Button.Colored"-->

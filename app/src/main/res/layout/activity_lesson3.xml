<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayanit.stockunlocked.Lesson3Activity">

    <ImageButton
        android:id="@+id/lesson3back"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backicon2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/unlockls4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unlock lesson 4"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="178dp" />

    <Button
        android:id="@+id/takequiz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take a quiz"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="317dp" />

</android.support.constraint.ConstraintLayout>

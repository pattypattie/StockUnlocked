<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.npappdev.chayanit.stockunlocked.Lesson6Quiz2Fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/blankbtn"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/backicon2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/instructionl6q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The graph below is a candlestick chart with support and resistance levels. According to the graph, what is the best action?"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/blankbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/imageView68"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sr_quiz_question"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="202dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructionl6q2"/>

        <RadioGroup
            android:checkedButton="@+id/buy"
            android:id="@+id/buysell"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/buy_sell_toggle_outline"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/imageView68">

            <RadioButton
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/sell"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/buy_sell_toggle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="Sell" />

            <RadioButton
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/buy"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buy_sell_toggle"
                android:button="@null"
                android:gravity="center"
                android:text="Buy" />
        </RadioGroup>

        <Button
            android:id="@+id/submitl6q2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/submit"
            android:foreground="?android:attr/selectableItemBackground"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="321dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/buysell"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="347dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/submitl6q2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="347dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView43"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/imageView69"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sr_quiz_answer"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="397dp"
            app:layout_constraintTop_toBottomOf="@id/textView44"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"/>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayanit.stockunlocked.QuizActivity">

    <ImageButton
        android:id="@+id/quizback"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/button_style_5"
        android:foreground="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/backicon2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/quiz1"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Quiz lesson 1"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_style_3"
        app:layout_constraintTop_toBottomOf="@id/quizback"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/quiz2"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Quiz lesson 2"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_style_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/quiz3"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Quiz Lesson 3"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_style_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/quiz4"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Quiz lesson 4"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_style_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="308dp" />

    <Button
        android:id="@+id/quiz5"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="quiz lesson 5"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_style_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/quiz6"
        android:layout_width="130dp"
        android:fontFamily="@font/vt323"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="quiz lesson 6"
        android:foreground="?android:attr/selectableItemBackground"

        android:background="@drawable/button_style_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/quizSpecial"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="special quiz"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/button_style_1"
        android:fontFamily="@font/vt323"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/quiz6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="394dp" />

</android.support.constraint.ConstraintLayout>
